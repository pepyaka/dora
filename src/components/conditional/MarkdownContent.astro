---
import OriginMarkdownContent from "@astrojs/starlight/components/MarkdownContent.astro";
import RegulationsMarkdownContent from "../regulations/MarkdownContent.astro";

const {
  id,
  entry: { data },
} = Astro.locals.starlightRoute;
const isRegulations = id.startsWith("regulations/");
const articleCounterInitialValue: number =
  data.regulation?.pageArticleStart || 0;
---

{
  isRegulations ? (
    <RegulationsMarkdownContent
      articleCounterInitialValue={articleCounterInitialValue}
    >
      <slot />
    </RegulationsMarkdownContent>
  ) : (
    <OriginMarkdownContent>
      <slot />
    </OriginMarkdownContent>
  )
}
