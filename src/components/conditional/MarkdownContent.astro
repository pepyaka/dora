---
import OriginMarkdownContent from "@astrojs/starlight/components/MarkdownContent.astro";
import RegulationsMarkdownContent from "../regulations/MarkdownContent.astro";

const pageArticleStart =
  Astro.locals.starlightRoute.entry.data.regulation?.pageArticleStart;

let ActiveMarkdownContent;
if (pageArticleStart) {
  ActiveMarkdownContent = RegulationsMarkdownContent;
} else {
  ActiveMarkdownContent = OriginMarkdownContent;
}
---

<ActiveMarkdownContent articleCounterInitialValue={pageArticleStart || 0}>
  <slot />
</ActiveMarkdownContent>
